{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "resolveJsonModule": true,
    "lib": ["ES2020"],
    "types": [],
    "typeRoots": ["./lib"]
  },
  "include": ["*.ts", "example/*.ts", "lib/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}